/* 页面容器 */
page {
  height: 100%;
  background: #000;
}

.camera-container {
  width: 100%;
  height: 100vh;
  position: relative;
  background: #000;
}

.camera {
  width: 100%;
  height: 100%;
}

/* 顶部导航栏 */
.nav-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(40rpx + env(safe-area-inset-top)) 30rpx 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.5), transparent);
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.2);
  border-radius: 30rpx;
}

.action-btn.active {
  background: rgba(255,255,255,0.4);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 帮助按钮 */
.help-btn {
  position: absolute;
  top: calc(120rpx + env(safe-area-inset-top));
  right: 30rpx;
  display: flex;
  align-items: center;
  background: rgba(0,0,0,0.4);
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
}

.help-icon {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #fff;
  margin-right: 8rpx;
}

.help-text {
  font-size: 24rpx;
  color: #fff;
}

/* 中间提示 */
.center-tip {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tip-text {
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  white-space: nowrap;
}

/* 底部区域 */
.bottom-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.85);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 模式切换标签 */
.mode-tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.tab {
  position: relative;
  font-size: 28rpx;
  color: rgba(255,255,255,0.6);
  padding: 10rpx 16rpx;
  transition: all 0.3s;
}

.tab.active {
  color: #fff;
  font-weight: 500;
}

.tab-dot {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #07c160;
  border-radius: 50%;
}

/* 底部控制区 */
.bottom-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 80rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  width: 56rpx;
  height: 56rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #fff;
}

/* 拍照按钮 */
.capture-wrapper {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.capture-btn {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 50%;
  border: 8rpx solid rgba(255,255,255,0.3);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
}

.capture-wrapper:active .capture-btn {
  transform: scale(0.95);
  background: #f0f0f0;
}
